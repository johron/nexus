cmake_minimum_required(VERSION 2.8.2)

project(imgui-download NONE)

include(ExternalProject)
ExternalProject_Add(		imgui
        URL                 https://github.com/ocornut/imgui/archive/v1.69.zip
        TIMEOUT             10
		SOURCE_DIR          "${PROJECT_BINARY_DIR}/third_party/imgui/src"
		BINARY_DIR          "${PROJECT_BINARY_DIR}/third_party/imgui/build"
		CONFIGURE_COMMAND   ""
		BUILD_COMMAND       ""
		INSTALL_COMMAND     ""
		TEST_COMMAND        ""
		LOG_DOWNLOAD		ON
		LOG_CONFIGURE		ON
		LOG_BUILD			ON
)