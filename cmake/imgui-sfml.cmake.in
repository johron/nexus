cmake_minimum_required(VERSION 2.8.2)

project(imgui-download NONE)

include(ExternalProject)
ExternalProject_Add(		imgui-sfml
        GIT_REPOSITORY 		https://github.com/eliasdaler/imgui-sfml.git
        TIMEOUT             10
		SOURCE_DIR          "${PROJECT_BINARY_DIR}/third_party/imgui-sfml/src"
		BINARY_DIR          "${PROJECT_BINARY_DIR}/third_party/imgui-sfml/build"
		CONFIGURE_COMMAND   ""
		BUILD_COMMAND       ""
		INSTALL_COMMAND     ""
		TEST_COMMAND        ""
		LOG_DOWNLOAD		ON
		LOG_CONFIGURE		ON
		LOG_BUILD			ON
)