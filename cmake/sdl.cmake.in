cmake_minimum_required(VERSION 2.8.2)

project(sdl-download NONE)

include(ExternalProject)
ExternalProject_Add(sdl
        URL                 https://github.com/SDL-mirror/SDL/archive/release-2.0.9.zip
        TIMEOUT             10
		SOURCE_DIR          "${PROJECT_BINARY_DIR}/third_party/sdl/src"
		BINARY_DIR          "${PROJECT_BINARY_DIR}/third_party/sdl/build"
		CONFIGURE_COMMAND   ""
		BUILD_COMMAND       ""
		INSTALL_COMMAND     ""
		TEST_COMMAND        ""
		LOG_DOWNLOAD		ON
		LOG_CONFIGURE		ON
		LOG_BUILD			ON
)