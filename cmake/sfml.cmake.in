cmake_minimum_required(VERSION 2.8.2)

project(sfml-download NONE)

include(ExternalProject)
ExternalProject_Add(sfml
        URL                 https://github.com/SFML/SFML/releases/download/2.5.1/SFML-2.5.1-sources.zip
        TIMEOUT             10
		SOURCE_DIR          "${PROJECT_BINARY_DIR}/third_party/sfml/src"
		BINARY_DIR          "${PROJECT_BINARY_DIR}/third_party/sfml/build"
		CONFIGURE_COMMAND   ""
		BUILD_COMMAND       ""
		INSTALL_COMMAND     ""
		TEST_COMMAND        ""
		LOG_DOWNLOAD		ON
		LOG_CONFIGURE		ON
		LOG_BUILD			ON
)